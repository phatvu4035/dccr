<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ads_campaign_form" model="ir.ui.view">
            <field name="name">ads.campaign.form</field>
            <field name="model">ads.campaign</field>
            <field name="arch" type="xml">
                <form string="Ads Campaign Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="campaign_id"/>
                                <field name="platform"/>
                                <field name="ad_account_id" domain="[('platform', '=', platform)]"/>
                            </group>
                            <group>
                                <field name="objective"/>
                                <field name="status"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Budget and Schedule" name="budget_schedule">
                                <group>
                                    <group>
                                        <field name="daily_budget"/>
                                        <field name="lifetime_budget"/>
                                        <field name="currency_id" />
                                    </group>
                                    <group>
                                        <field name="start_time" />
                                        <field name="end_time" />
                                    </group>
                                </group>
                            </page>

                            <page string="Performance Metrics" name="performance_metrics">
                                <group>
                                    <group>
                                        <field name="impressions" />
                                        <field name="clicks" />
                                        <field name="ctr" />
                                        <field name="spend" />
                                    </group>
                                    <group>
                                        <field name="cpc" />
                                        <field name="cpm" />
                                        <field name="conversions" />
                                        <field name="conversion_rate" />
                                    </group>
                                </group>
                            </page>
                            <page string="Metadata" name="metadata">
                                <field name="created_time" />
                                <field name="updated_time" />
                                <field name="sync_status" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ads_campaign_list" model="ir.ui.view">
            <field name="name">ads.campaign.list</field>
            <field name="model">ads.campaign</field>
            <field name="arch" type="xml">
                <list string="List of Ads Campaign">
                    <field name="name"/>
                    <field name="campaign_id"/>
                    <field name="platform"/>
                    <field name="ad_account_id"/>
                    <field name="objective"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="view_ads_campaign_kanban" model="ir.ui.view">
            <field name="name">ads.campaign.kanban</field>
            <field name="model">ads.campaign</field>
            <field name="arch" type="xml">
                <kanban string="Ads Campaign Kanban">
                    <templates>
                        <t t-name="card">
                            <div class="row">
                                <div class="col-8">
                                    <field class="fw-bolder" name="name"/>
                                </div>
                                <div class="col-4 text-end">
                                    <field class="badge rounded-pill" name="platform"/>
                                </div>
                            </div>
                            <div>
                                <strong>Ad Account: </strong>
                                <field name="ad_account_id"/>
                            </div>
                            <div>
                                <strong>Objective: </strong>
                                <field name="objective"/>
                            </div>
                            <div>
                                <strong>Start Time: </strong>
                                <field name="start_time"/>
                            </div>
                            <div>
                                <strong>End Time: </strong>
                                <field name="end_time"/>
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <field name="status"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_ads_campaign_search" model="ir.ui.view">
            <field name="name">ads.campaign.search</field>
            <field name="model">ads.campaign</field>
            <field name="arch" type="xml">
                <search string="Ads Business Account">
                    <field name="name" string="Account Name"/>
                    <filter string="Facebook" name="facebook" domain="[('platform','=','facebook')]"/>
                    <filter string="Google" name="google" domain="[('platform','=','google')]"/>
                    <filter string="Tiktok" name="tiktok" domain="[('platform','=','tiktok')]"/>
                    <filter string="Shopee" name="shopee" domain="[('platform','=','shopee')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Platform" name="platform" context="{'group_by':'platform'}"/>
                        <filter string="Objective" name="objective" context="{'group_by':'objective'}"/>
                        <filter string="Ads Account" name="ad_account_id" context="{'group_by':'ad_account_id'}"/>
                        <filter string="Status" name="status" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_ads_campaign_account" model="ir.actions.act_window">
            <field name="name">Ads Campaign</field>
            <field name="res_model">ads.campaign</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="dccr_ads_management.view_ads_campaign_search"/>
             <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Campaign
                </p>
            </field>
        </record>
    </data>
</odoo>
