<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ads_account_form" model="ir.ui.view">
            <field name="name">ads.account.form</field>
            <field name="model">ads.account</field>
            <field name="arch" type="xml">
                <form string="Ads Business Account">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="platform"/>
                                <field name="account_id"/>
                                <field name="ads_manager_account_id" domain="[('platform', '=', platform)]"/>
                                <field name="mapped_expense_ad_account_id"/>
                            </group>
                            <group>
                                <field name="timezone"/>
                                <field name="currency_id"/>
                                <field name="access_token"/>
                                <field name="refresh_token"/>
                                <field name="token_expired_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Expense Ad Account" name="expense_ad_account">
                                <group>
                                    <group>
                                        <field name="acc_number" />
                                        <field name="acc_name" />
                                        <field name="employee_id" />
                                        <field name="possession_type" />
                                        <field name="bank_id" />
                                    </group>
                                    <group>
                                        <field name="marketing_employee_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Ads Campaign" name="ads_campaign">
                                <field name="campaign_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="campaign_id"/>
                                        <field name="objective"/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Pages" name="pages">
                                <field name="page_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="page_id"/>
                                        <field name="url"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="website"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ads_account_list" model="ir.ui.view">
            <field name="name">ads.account.list</field>
            <field name="model">ads.account</field>
            <field name="arch" type="xml">
                <list string="LÃ­st of Ads Account">
                    <field name="name" />
                    <field name="platform" />
                    <field name="account_id" />
                    <field name="ads_manager_account_id" />
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="view_ads_account_kanban" model="ir.ui.view">
            <field name="name">ads.account.kanban</field>
            <field name="model">ads.account</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="card">
                            <div class="row">
                                <div class="col-6">
                                    <field class="fw-bolder" name="name"/>
                                </div>
                                <div class="col-6 text-end">
                                    <field class="badge rounded-pill" name="platform" widget="badge" decoration-info="platform in ['facebook', 'google']"
                                        decoration-warning="platform == 'tiktok'"
                                        decoration-success="platform == 'shopee'"/>
                                </div>
                            </div>
                            <div>
                                <strong>Ads Account ID: </strong>
                                <field name="account_id"/>
                            </div>
                            <div>
                                <strong invisible="platform != 'facebook'">ID Business Management: </strong>
                                <strong invisible="platform != 'google'">ID Customer: </strong>
                                <strong invisible="platform != 'tiktok'">ID Business Center: </strong>
                                <strong invisible="platform != 'shopee'">ID Shop: </strong>
                                <field name="ads_manager_account_id"/>
                            </div>

                            <div>
                                <strong>State: </strong>
                                <field name="state" widget="badge" invisible="state != 'unauthorised'" options="{'class': 'bg-secondary'}"/>
                                <field name="state" widget="badge" invisible="state != 'authorised'" options="{'class': 'bg-success'}"/>
                                <field name="state" widget="badge" invisible="state != 'error'" options="{'class': 'bg-danger'}"/>
                                <field name="state" widget="badge" invisible="state != 'expired'" options="{'class': 'bg-warning'}"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_ads_account_search" model="ir.ui.view">
            <field name="name">ads.account.search</field>
            <field name="model">ads.account</field>
            <field name="arch" type="xml">
                <search string="Ads Account">
                    <field name="name" string="Account Name"/>
                    <field name="account_id" string="Ads Account ID"/>
                    <filter string="Facebook" name="facebook" domain="[('platform','=','facebook')]"/>
                    <filter string="Google" name="google" domain="[('platform','=','google')]"/>
                    <filter string="Tiktok" name="tiktok" domain="[('platform','=','tiktok')]"/>
                    <filter string="Shopee" name="shopee" domain="[('platform','=','shopee')]"/>
                    <separator/>
                    <filter string="Unauthorised" name="unauthorised" domain="[('state','=','unauthorised')]"/>
                    <filter string="Authorised" name="authorised" domain="[('state','=','authorised')]"/>
                    <filter string="Error" name="error" domain="[('state','=','error')]"/>
                    <filter string="Expired" name="expired" domain="[('state','=','expired')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Platform" name="platform" context="{'group_by':'platform'}"/>
                        <filter string="Business Account ID" name="business_account_id" context="{'group_by':'ads_manager_account_id'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_ads_account" model="ir.actions.act_window">
            <field name="name">Ads Accounts</field>
            <field name="res_model">ads.account</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="tiny_ads_management.view_ads_account_search"/>
             <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Ads Account
                </p>
            </field>
        </record>
    </data>
</odoo>
