<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_page_category_form" model="ir.ui.view">
            <field name="name">page.category.form</field>
            <field name="model">page.category</field>
            <field name="arch" type="xml">
                <form string="Page Category">
                    <sheet>
                        <field name="name" />
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_page_category_list" model="ir.ui.view">
            <field name="name">page.category.list</field>
            <field name="model">page.category</field>
            <field name="arch" type="xml">
                <list string="List of Page Category">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_page_category_kanban" model="ir.ui.view">
            <field name="name">page.category.kanban</field>
            <field name="model">page.category</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="card">
                            <div class="row">
                                <div class="col-8">
                                    <field class="fw-bolder" name="name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_page_category_search" model="ir.ui.view">
            <field name="name">page.category.search</field>
            <field name="model">page.category</field>
            <field name="arch" type="xml">
                <search string="Page Category">
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record id="action_page_category" model="ir.actions.act_window">
            <field name="name">Page Category</field>
            <field name="res_model">page.category</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="tiny_ads_management.view_page_category_search"/>
             <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Page Category
                </p>
            </field>
        </record>
    </data>
</odoo>
