<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_social_network_page_form" model="ir.ui.view">
            <field name="name">social.network.page.form</field>
            <field name="model">social.network.page</field>
            <field name="arch" type="xml">
                <form string="Social Network Page">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="page_id"/>
                                <field name="platform"/>
                                <field name="ad_account_id" domain="[('platform', '=', platform)]"/>
                                <field name="description"/>
                                <field name="url"/>
                            </group>
                            <group>
                                <field name="profile_picture_url"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="website"/>
                                <field name="address"/>
                                <field name="state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_social_network_page_list" model="ir.ui.view">
            <field name="name">social.network.page.list</field>
            <field name="model">social.network.page</field>
            <field name="arch" type="xml">
                <list string="List of Social Network Page">
                    <field name="name"/>
                    <field name="page_id"/>
                    <field name="ad_account_id"/>
                    <field name="platform"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="state" widget="badge" invisible="state != 'active'" options="{'class': 'bg-success'}"/>
                    <field name="state" widget="badge" invisible="state != 'inactive'" options="{'class': 'bg-secondary'}"/>
                </list>
            </field>
        </record>

        <record id="view_social_network_page_kanban" model="ir.ui.view">
            <field name="name">social.network.page.kanban</field>
            <field name="model">social.network.page</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_aside_full">
                                <field name="profile_picture_url" widget="image_url"/>
                            </aside>
                            <main class="ms-2">
                                <div class="row">
                                    <div class="col-8">
                                        <field class="fw-bolder" name="name"/>
                                    </div>
                                    <div class="col-4 text-end">
                                        <field class="badge rounded-pill" name="platform" decoration-info="platform == 'facebook' or platform == 'google'"
                                        decoration-warning="platform == 'tiktok'"
                                        decoration-success="platform == 'shopee'"/>
                                    </div>
                                </div>
                                <div>
                                    <strong>Page ID: </strong>
                                    <field name="page_id"/>
                                </div>
                                <div>
                                    <strong>Ads Account: </strong>
                                    <field name="ad_account_id"/>
                                </div>
                                <div>
                                    <strong>Phone: </strong>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <strong>Email: </strong>
                                    <field name="email"/>
                                </div>
                                <div>
                                    <strong>State: </strong>
                                    <field name="state" widget="badge" invisible="state != 'active'" options="{'class': 'bg-success'}"/>
                                    <field name="state" widget="badge" invisible="state != 'inactive'" options="{'class': 'bg-secondary'}"/>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_social_network_page_search" model="ir.ui.view">
            <field name="name">social.network.page.search</field>
            <field name="model">social.network.page</field>
            <field name="arch" type="xml">
                <search string="Social Network Pages">
                    <field name="name" string="Page Name"/>
                    <field name="page_id" string="Page ID"/>
                    <field name="ad_account_id" string="Ad Account"/>
                    <filter string="Facebook" name="facebook" domain="[('platform','=','facebook')]"/>
                    <filter string="Google" name="google" domain="[('platform','=','google')]"/>
                    <filter string="Tiktok" name="tiktok" domain="[('platform','=','tiktok')]"/>
                    <filter string="Shopee" name="shopee" domain="[('platform','=','shopee')]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('state','=','active')]"/>
                    <filter string="Inactive" name="inactive" domain="[('state','=','inactive')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Platform" name="platform" context="{'group_by':'platform'}"/>
                        <filter string="Ads Account" name="ad_account_id" context="{'group_by':'ad_account_id'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_social_network_page" model="ir.actions.act_window">
            <field name="name">Social Network Pages</field>
            <field name="res_model">social.network.page</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="tiny_ads_management.view_social_network_page_search"/>
             <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Social Network Page
                </p>
            </field>
        </record>
    </data>
</odoo>
